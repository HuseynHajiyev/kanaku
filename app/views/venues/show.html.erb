    <div class="venue-description-container">
      <div>
        <%= link_to city_path(@venue.city), class: "mt-3 venue-show-card-city-name", id: "country" do %>
          <p> <span id="pin">ðŸ“Œ</span> <%= @venue.city.name %></p>
        <% end %>
