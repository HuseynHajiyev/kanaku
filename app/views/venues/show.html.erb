<div class="container">
  <h1><%= @venue.name %></h1>
  <div>
    <%# <img class="show_image" src="https://media.istockphoto.com/photos/villefranchesurmer-village-in-france-picture-id1248448159?k=20&m=1248448159&s=612x612&w=0&h=leahrG95LcBDfdkPCavNL9W8ZC2OroNZPqO-196HDPU="> %>

    <% if @venue.photos.attached? %>
      <% @venue.photos.each do |photo| %>
        <%= cl_image_tag photo.key, height: 150, width: 150, crop: :fill %>
      <% end %>
    <% else %>
      <%= image_tag "https://res.cloudinary.com/wvala/image/upload/v1653657110/nxr4ymq5mgmmfmwflkqv.jpg" %>
    <% end %>


    <div class="container">
      <p class="mt-3">This venue is in <%= @venue.city.name %> (<%= @venue.city.latitude %>, <%= @venue.city.longitude %>)</p>
      <p><%@venue.description%></p>
      <div class="d-flex justify-content-between">
        <a><button type="button" id="show_btn" class="btn btn-main mr-1">Add a new journey</button></a>
        <button type="button" id="show_btn" class="btn btn-main">Add to current journey</button>
      </div>
    </div>
  </div>
</div>
