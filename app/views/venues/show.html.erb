<br>
<div class="container show-container">
  <div class="venue-show-card">
    <div class="container">
      <div class="venue-image">
        <% if @venue.photos.attached? %>
          <% @venue.photos.each do |photo| %>
            <%= cl_image_tag photo.key, class: "w-90 h-75" %>
          <% end %>
        <% else %>
          <%= image_tag "https://res.cloudinary.com/wvala/image/upload/v1653657110/nxr4ymq5mgmmfmwflkqv.jpg" %>
        <% end %>
      </div>
      <br>
      <h1 class="mt-3 venue-show-card-city-name", id="country"><%= @venue.name %></h1>
    </div>
    <div class="venue-description-container">
      <div>
        <%= link_to "Located in #{@venue.city.name}", city_path(@venue.city), class: "mt-3 venue-show-card-city-name", id: "country" %>
      </div>
      <br>
      <p><%= @venue.description %></p>
    </div>
  </div>
</div>
<div class="d-flex justify-content-between" id="venue-button-container">
    <%# <a href="" class="btn btn-success" id="accept-venue">Add to previous</a>
    <a href="" class="btn btn-success" id="accept-venue"></a> %>
    <%  %>
    <% if @included %>
      <%= link_to 'Remove from Journey', remove_venue_path(@venue), method: :destroy, class: "btn btn-success", id: "accept-venue" %>
    <% else %>
      <%= link_to 'Add to Journey', add_venue_path(@venue), method: :add_venue, class: "btn btn-success", id: "accept-venue"  %>
    <% end %>
</div>
