<div class="city-container">
  <div class="city-card">
    <img>
    <h1><%= @city.name %></h1>
  </div>
    <div class="city-description">
      <h2><%= @city.description %></h2>
    </div>
      <div class="city-venues">
        <h3> Sights </h3>
        <img>
        <h3> Bars </h3>
        <img>
        <h3> Rooftops </h3>
        <img>
        <h3> Tourist hotspots </h3>
        <img>
      </div>
</div>

<% if @city.photos.attached? %>
  <% @city.photos.each do |photo| %>
    <%= cl_image_tag photo.key, height: 150, width: 150, crop: :fill %>
  <% end %>
<% else %>
  <%= image_tag "https://res.cloudinary.com/wvala/image/upload/v1653657110/nxr4ymq5mgmmfmwflkqv.jpg" %>
<% end %>
