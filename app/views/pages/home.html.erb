<div data-controller="mapDisplay">
  <p class="btn option-button" data-mapDisplay-target="gridButton" data-action="click->mapDisplay#displayToggle">See all cars</p>
  <div class="container">
    <div class="map-border" data-mapDisplay-target="mapb">
      <div style="width: 100%; height: 600px;" class="map"
        data-controller="mapbox"
        data-mapbox-markers-value="<%= @markers.to_json %>"
        data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
</div>
