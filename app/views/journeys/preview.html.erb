<div class="journey-overview-map">
  <div data-controller="mapDisplay">
    <div class="map-border" data-mapDisplay-target="mapb">
      <div style="width: 100%; height: 100vh;" class="map"
        data-controller="mapbox"
        data-mapbox-journey-show-value="show"
        data-mapbox-markers-value="<%= @markers.to_json %>"
        data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
</div>
<div class="instructions-holder" data-controller="instructions">
  <div class="internal-container">
    <div class="container" >
      <div class="floating-button">
        <div class="btn" id="homepage-map-button" data-instructions-target="button" data-action="click->instructions#displayInstructions">Show Instructions</div>
      </div>
    </div>
    <div class="instruction-container d-none" data-instructions-target="instructionsDiv">
      <div class="instruction-div" id="instructions"></div>
    </div>
  </div>
</div>
